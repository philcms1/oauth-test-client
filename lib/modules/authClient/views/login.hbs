<div class="container theme-showcase" role="main">
    <div class="page-header">
        <h1>Login</h1>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form class="form-horizontal" action="/client/login" method="post" novalidate>
                <input type="hidden" name="req_id" value={{req_id}}>
                {{#if next}}
                    <input type="hidden" name="next" value={{next}}>
                {{/if}}
                <div class="form-group {{#if errors.username}}has-error{{/if}}">
                    <label for="inputUsername" class="col-sm-2 control-label">Username</label>
                    <div class="col-sm-10">
                        <input type="text" name="username" value="{{values.username}}" class="form-control" id="inputUsername" placeholder="Username" aria-describedby="helpBlockUsername">
                        {{#if errors.username}}
                            <span id="helpBlockEmail" class="help-block">{{errors.username}}</span>
                        {{/if}}
                    </div>
                </div>
                <div class="form-group {{#if errors.password}}has-error{{/if}}">
                    <label for="inputPassword" class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" name="password" value="{{values.password}}" class="form-control" id="inputPassword" placeholder="Password" aria-describedby="helpBlockPwd">
                        {{#if errors.password}}
                            <span id="helpBlockPwd" class="help-block">{{errors.password}}</span>
                        {{/if}}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">Login</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>