<div class="container theme-showcase" role="main">
    <div class="page-header">
        <h1>Available Clients</h1>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Client ID</th>
                    <th>Client Secret</th>
                    <th>Client Name</th>
                    <th>Redirect URIs</th>
                    <th>Scope</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {{#each clients}}
                    <tr>
                        <td>{{client_id}}</td>
                        <td>{{client_secret}}</td>
                        <td>{{client_name}}</td>
                        <td>{{redirect_uris}}</td>
                        <td>{{scope}}</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="...">
                                <form action="/client/set_client" method="post">
                                    <input type="hidden" name="client_id" value={{client_id}}>
                                    <button type="submit" name="set_client" value="your_value" class="btn-link">
                                        <span class="glyphicon glyphicon-arrow-right"></span>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
            <p>
                <a class="btn btn-large btn-info" href="/client/addclient">Add</a>
            </p>
        </div>
    </div>
</div>